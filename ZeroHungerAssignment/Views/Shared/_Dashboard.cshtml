<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
               
                @Html.ActionLink("NGO", "Create", "Restaurant", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Collect Requests", "Create", "Restaurant", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Restaurants", "Index", "Restaurant", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Employees", "Index", "Employee", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Assign Employee", "Assign", "Employee", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Food Distribution", "Index", "FoodDistribution", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Completed Requests List", "completData", "Restaurant", new { area = "" }, new { @class = "navbar-brand" })

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
