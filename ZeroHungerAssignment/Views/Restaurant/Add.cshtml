@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h2>Add Restaurant</h2>
@if (TempData["msg"] != null)
{
    <div class="btn btn-success">@TempData["msg"]</div>
}
<form method="post">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="form-control" name="Name" id="Name" placeholder=" Enter Restaurant Name" required>
    </div>

    <div class="form-group">
        <label for="contactinfo">ContactInfo:</label>
        <input type="text" class="form-control" name="ContactInfo" id="ContactInfo" placeholder=" Enter Restaurant Contact Info" required>
    </div>

    <div class="form-group">
        <label for="address">Address:</label>
        <input type="text" class="form-control" name="Address" id="Address" placeholder=" Enter Restaurant Address" required>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>